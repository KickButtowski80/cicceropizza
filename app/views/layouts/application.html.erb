<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <script
  src="https://code.jquery.com/jquery-3.1.1.min.js"
  integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
  crossorigin="anonymous"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= yield(:header) %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700,700i,900" rel="stylesheet">
</head>
<body>

  <%= render 'layouts/navbar'%>
  <%= render 'layouts/slogan'%>
  <%#= yield %>
  <%#= render template:'abouts/index'%>
  <% if controller.controller_name == 'welcome' || controller.controller_name == 'menus' %> 
    <%= render template: 'menus/index' %>
    <%= render template: 'abouts/index'%>
  <% elsif controller.controller_name == 'abouts' %>
    <%= render template: 'menus/index' %>
    <%= render template: 'abouts/index'%>
  <% elsif controller.controller_name == 'dinner' %>
    <%= render template: 'menus/dinner/index' %>
  <% elsif controller.controller_name == 'lunch' %>
    <%= render template: 'menus/lunch/index' %>
  <%end%>

</body>
</html>
