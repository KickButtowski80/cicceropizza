<div class="jumbotron" style="margin:20px; margin-top:100px; border-radius:5px; opacity:0.7">
    <div class="row" style=" margin: 0 auto;"> 
        <form id='form' class="col-xs-12 box" >
            <h2>Lunch Menu</h2>
              <% MenuConfig.current_menu.each do |item,content| %> 
                <div class="top">
                    <h5><%= item%></h5>
                </div>
                <div class="bottom">
                  <% content.each do |subject,detail| %>
                   <input type="checkbox" name="menItems" onclick="myFunction(this)" 
            value="<%= subject["name"] %>&nbsp;&nbsp;&nbsp;&nbsp;<%= subject["price"] %>">
                        <%= subject["name"] %><br>
                        <% unless subject["ingredients"].nil?  %>
                            <%= subject["ingredients"]%>
                            <%= tag(:br) %>
                        <%end%>
                        <%= subject["price"] %><br>
                   <%end%>
                </div>
                 <%end%>  
          </form>  
        <div  class="col-xs-12 "> 
                <h1>Ordered</h1>
                <div id="order">
                </div> 
         </div>
     </div>
 </div> 
